body{
	font-family:'微软雅黑';
	color:#666;
}
.radius {
	border: 1px solid #cccccc;
	-webkit-border-radius: 7px;
	-moz-border-radius: 7px;
	border-radius: 7px;
}
.center{
	text-align:center;
}
.right{
	text-align:right;
}
.col{
	float:left;
}
.float_right{
	float:right;
}
.clear{
	clear:both;
}
.hide{
	display:none;
}
.short_button{
	width:80px;
	height:25px;
	background-color:#3377aa;
	border:none;
	color:#fff;
	text-align:center;
}
.short_button:hover{
	background-color:#2c658f;
	cursor:pointer;
}
.min_button{
	.short_button;
	height:20px;
	width:50px;
}
.min_button:hover{
	background-color:#2c658f;
	cursor:pointer;
}
.dashed_border{
	width:100%；
	height:1px;
	border-top:2px dashed #ccc;
}
.divide_line{
	clear:both;
	background-color:#999;
	height:1px;
	width:100%;
}
.dotted_line{
	clear:both;
	background:url(../img/dotted_line.png);
	height:1px;
	width:100%;
	margin:10px 0 10px 0;
}
.header{
	height:80px;
	.logo{
		float:left;
		width:100px;
	}
	.top_nav{
		float:left;
		margin-left:40px;
		width:820px;
	}
}
.middle{
	min-height:400px;
	margin-top:30px;	
}
.footer{
	width:900px;
	margin:30px auto;
	color:#999;
	font-size:12px;
}
